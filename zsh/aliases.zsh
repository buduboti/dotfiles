
alias c=clear
alias q=exit
alias :q=exit

alias lg="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"

alias ls="ls -G"
alias l="ls -lG"
alias ll="ls -laG"

alias ...="cd ../.."
