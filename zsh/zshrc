export LANGUAGE=en_US.UTF-8
export LC_ALL=en_US.UTF-8  
export LANG=en_US.UTF-8
export HISTSIZE=9999999
export DOTFILES=$HOME/.dotfiles
export ZSH=$DOTFILES/zsh
export EDITOR="vim"

# zplug
if [ -d '/opt/homebrew' ]; then
	export ZPLUG_HOME=/opt/homebrew/opt/zplug
else
	export ZPLUG_HOME=/usr/local/opt/zplug
fi
source $ZPLUG_HOME/init.zsh

# include paths in "$DOTFILES/zsh/path" to the PATH
export PATH="$PATH:$DOTFILES/bin"
export PATH="$PATH:/usr/local/Cellar/*/*/bin"
export PATH="$PATH:/Users/buduboti/Library/Python/3.8/bin"
export PATH="$PATH:/usr/local/opt/llvm/bin"
export PATH="$PATH:/Users/buduboti/Documents/hacks/bin"
export PATH="$PATH:$HOME/.local/bin"

source $DOTFILES/zsh/keybindings.zsh
source $DOTFILES/zsh/async.zsh
source $DOTFILES/zsh/utils.zsh

# Set theme
DARKTHEME="$DOTFILES/themes/base16-shell/scripts/base16-gruvbox-dark-soft.sh"
LIGHTTHEME="$DOTFILES/themes/base16-shell/scripts/base16-gruvbox-light-soft.sh"

$DARKTHEME

dark() {
	$DARKTHEME
}

light() {
	$LIGHTTHEME
}

# # Prompt
source "$ZSH/prompt.zsh"

# Aliases
source "$ZSH/aliases.zsh"

autoload -U compinit
compinit

autoload -U edit-command-line
# Emacs style
zle -N edit-command-line
bindkey '^xe' edit-command-line
bindkey '^x^e' edit-command-line

# SmartCase completion

zstyle ':completion:*'  matcher-list 'm:{a-z}={A-Z}'

# $DOTFILES/bin/updater

if [[ "$EUID" == "0" ]]; then
	echo "Hi root!"
else
	echo "Hi $USER!"
fi

# $DOTFILES/bin/updater

conda-init() {
	# >>> conda initialize >>>
	# !! Contents within this block are managed by 'conda init' !!
	__conda_setup="$('/Users/buduboti/miniconda3/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
	if [ $? -eq 0 ]; then
		eval "$__conda_setup"
	else
		if [ -f "/Users/buduboti/miniconda3/etc/profile.d/conda.sh" ]; then
			. "/Users/buduboti/miniconda3/etc/profile.d/conda.sh"
		else
			export PATH="/Users/buduboti/miniconda3/bin:$PATH"
		fi
	fi
	unset __conda_setup
	# <<< conda initialize <<<
}

 export JAVA_HOME=/Library/Java/JavaVirtualMachines/jdk-20.jdk/Contents/Home
 export PATH=$JAVA_HOME/bin:$PATH
