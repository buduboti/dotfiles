
export LANGUAGE=en_US.UTF-8
export LC_ALL=en_US.UTF-8  
export LANG=en_US.UTF-8

export DOTFILES=$HOME/.dotfiles
export ZSH=$DOTFILES/zsh

if [[ "$OSTYPE" == "darwin"* ]]; then
	export PATH=$PATH":/Users/buduboti/go/bin:/Users/buduboti/.dotfiles/bin"
fi

# Set theme
DARKTHEME="$DOTFILES/themes/base16-shell/scripts/base16-gruvbox-dark-soft.sh"
LIGHTTHEME="$DOTFILES/themes/base16-shell/scripts/base16-gruvbox-light-soft.sh"

$DARKTHEME

dark() {
	$DARKTHEME
}

light() {
	$LIGHTTHEME
}

# zplug

source ~/.zplug/init.zsh

# Prompt
source "$ZSH/prompt.zsh"

# Aliases
source "$ZSH/aliases.zsh"

# Git completion
# $ZSH/git-completion.zsh

# University configs
# source "$ZSH/univ.zsh"

# Plugins
source $DOTFILES/zsh/plugins/zsh-autosuggestions/zsh-autosuggestions.zsh
source $DOTFILES/zsh/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

# Load zplug files

# zplug load

export ENHANCD_FILTER="fzy"

autoload -U compinit
compinit

echo "Hi $USER!"
$DOTFILES/bin/updater

