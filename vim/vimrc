:set number relativenumber

:syntax on

" Backspace (in insert mode)

set backspace=indent,eol,start

" Set wrap (don't break a long line)

:set wrap!

" Sources (includes)

:so ~/.dotfiles/vim/plugins.vim
:so ~/.dotfiles/vim/functions.vim

" Window managemant

map <silent> <C-h> :call functions#WinMove('h')<CR>
map <silent> <C-j> :call functions#WinMove('j')<CR>
map <silent> <C-k> :call functions#WinMove('k')<CR>
map <silent> <C-l> :call functions#WinMove('l')<CR>

" Tab managemant

map <F8> :tabe 
map <F7> :tabp<CR>
map <F9> :tabn<CR>

" map Ctrl-e to open . folder

map <silent> <C-e> :e .<CR>

" Unmaping arrow keys
" Just for learning :)

map <up> <nop>
map <down> <nop>
map <left> <nop>
map <right> <nop>
imap <up> <nop>
imap <down> <nop>
imap <left> <nop>
imap <right> <nop>

" Markdown title shortcuts

map g1 :call functions#MainTitleMD()<CR>
map g2 :call functions#SecondTitleMD()<CR>
map g3 :call functions#ThirdTitleMD()<CR>

" Tag jumping config

command! MakeTags !ctags -R .

" Custom Lightline

:so ~/.dotfiles/themes/base16.vim

set laststatus=2
if !has('gui_running')
    set t_Co=256
endif
set noshowmode
let g:lightline = {
\   'active': {
